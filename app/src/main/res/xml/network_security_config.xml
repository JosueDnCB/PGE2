<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
        Permite tráfico HTTP (texto claro/sin encriptar).
        Esto es necesario para pruebas locales (localhost/10.0.2.2).
        En producción, deberías usar HTTPS y eliminar o restringir esto.
    -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Configuración específica para el emulador de Android -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
    </domain-config>
</network-security-config>
